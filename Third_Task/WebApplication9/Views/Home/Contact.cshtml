@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<main aria-labelledby="title">
    <h2 id="title">@ViewBag.Title.</h2>
    <h3>@ViewBag.Message</h3>


    @using (Html.BeginForm("SubmitDataContact", "Home", FormMethod.Post))
    {
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter your name"><br><br>

        <!-- Number Input -->
        <label for="age">Age:</label>
        <input type="number" id="age" name="age" min="1" max="100" step="1"><br><br>

        <!-- Radio Buttons -->
        <p>Gender:</p>
        <input type="radio" id="male" name="gender" value="male">
        <label for="male">Male</label><br>
        <input type="radio" id="female" name="gender" value="female">
        <label for="female">Female</label><br><br>

        <!-- Select Dropdown -->
        <label for="country">Country:</label>
        <select id="country" name="country">
            <option value="usa">USA</option>
            <option value="canada">Canada</option>
            <option value="uk">UK</option>
        </select><br><br>

        <!-- Multi-Select Dropdown -->
        <label for="languages">Languages:</label>
        <select id="languages" name="languages" multiple size="3">
            <option value="english">English</option>
            <option value="spanish">Spanish</option>
            <option value="french">French</option>
            <option value="german">German</option>
            <option value="chinese">Chinese</option>
        </select><br><br>

        <input type="submit" value="Submit">

    }
    @if (!(ViewBag.Name==null)) { 

    <h2 id="title">@ViewBag.Title</h2>

    <table>
        <tr>
            <th>Name</th>
            <td>@ViewBag.Name</td>
        </tr>
        <tr>
            <th>Age</th>
            <td>@ViewBag.Age</td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>@ViewBag.Gender</td>
        </tr>
        <tr>
            <th>Country</th>
            <td>@ViewBag.Country</td>
        </tr>
        <tr>
            <th>Languages</th>
            <td>@ViewBag.Languages</td>
        </tr>
    </table>
    }

</main>